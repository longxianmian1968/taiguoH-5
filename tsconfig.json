{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "./**/*",
    "../shared/**/*",
    "../vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "../client"
  ]
}